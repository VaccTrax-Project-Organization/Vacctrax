  "components": {
    "schemas": {
      "Address": {
        "type": "object",
        "required": [
          "streetLine1",
          "postalCode",
          "province",
          "city"
        ],
        "properties": {
          "streetLine1": {
            "type": "string",
            "example": "43, Test Street"
          },
          "streetLine2": {
            "type": "string",
            "example": "45, Test Street"
          },
          "postalCode": {
            "type": "string",
            "example": "J7J7J7"
          },
          "city": {
            "type": "string",
            "example": "Scarborough"
          }
        }
      },
      "Account": {
        "type": "object",
        "required": [
          "firstName",
          "lastName",
          "email",
          "password",
          "phone",
          "address",
          "type"
        ],
        "properties": {
          "firstName": {
            "type": "string",
            "example": "John"
          },
          "lastName": {
            "type": "string",
            "example": "Doe"
          },
          "email": {
            "type": "string",
            "example": "john@gmail.com"
          },
          "password": {
            "type": "string"
          },
          "phone": {
            "type": "string"
          },
          "address": {
            "$ref": "#/components/schemas/Address"
          },
          "type": {
            "type": "string",
            "enum": [
              "PATIENT",
              "MEDICALADMIN",
              "HEALTHPRACTITIONER",
              "GOVERNMENT"
            ],
            "description": "Account Type"
          }
        }
      },
      "Clinic": {
        "type": "object",
        "required": [
          "name",
          "address"
        ],
        "properties": {
          "_id": {
            "type": "string"
          },
          "name": {
            "type": "string",
            "example": "Centennial Clinic"
          },
          "address": {
            "$ref": "#/components/schemas/Address"
          }
        }
      },
      "Vaccine": {
        "type": "object",
        "required": [
          "name",
          "isRationed",
          "manufacturer",
          "shelfLife",
          "approvedProvinces",
          "vaccineId"
        ],
        "properties": {
          "_id": {
            "type": "string"
          },
          "name": {
            "type": "string",
            "example": "Pfizer"
          },
          "isRationed": {
            "type": "boolean",
            "default": true
          },
          "manufacturer": {
            "type": "string",
            "example": "Pfizer"
          },
          "shelfLife": {
            "type": "number",
            "example": 5
          },
          "approvedProvinces": {
            "type": "string",
            "example": "ON"
          },
          "vaccineId": {
            "type": "number"
          }
        }
      },
      "VaccineDTO": {
        "type": "object",
        "required": [
          "name",
          "isRationed",
          "manufacturer",
          "shelfLife",
          "approvedProvinces",
          "vaccineId"
        ],
        "properties": {
          "name": {
            "type": "string",
            "example": "Pfizer"
          },
          "isRationed": {
            "type": "boolean",
            "default": true
          },
          "manufacturer": {
            "type": "string",
            "example": "Pfizer"
          },
          "shelfLife": {
            "type": "number",
            "example": 5
          },
          "approvedProvinces": {
            "type": "string",
            "example": "ON"
          },
          "vaccineId": {
            "type": "number"
          }
        }
      },
      "Patient": {
        "type": "object",
        "required": [
          "healthCardNo",
          "account"
        ],
        "properties": {
          "healthCardNo": {
            "type": "string"
          },
          "account": {
            "$ref": "#/components/schemas/Account"
          }
        }
      },
      "HealthPractitioner": {
        "type": "object",
        "required": [
          "account",
          "clinic"
        ],
        "properties": {
          "_id": {
            "type": "string"
          },
          "account": {
            "$ref": "#/components/schemas/Account"
          },
          "clinic": {
            "$ref": "#/components/schemas/Clinic"
          }
        }
      },
      "MedicalAdmin": {
        "type": "object",
        "required": [
          "account",
          "clinic"
        ],
        "properties": {
          "_id": {
            "type": "string"
          },
          "account": {
            "$ref": "#/components/schemas/Account"
          },
          "clinic": {
            "$ref": "#/components/schemas/Clinic"
          }
        }
      },
      "Appointment": {
        "type": "object",
        "required": [
          "reason",
          "preferredDate",
          "preferredTime",
          "type",
          "clinic",
          "patient"
        ],
        "properties": {
          "_id": {
            "type": "string"
          },
          "reason": {
            "type": "string"
          },
          "preferredDate": {
            "type": "string",
            "format": "date-time"
          },
          "preferredTime": {
            "type": "string",
            "format": "date-time"
          },
          "startTime": {
            "type": "string",
            "format": "date-time"
          },
          "endTime": {
            "type": "string",
            "format": "date-time"
          },
          "type": {
            "type": "string",
            "enum": [
              "CONFIRMED",
              "REQUESTED",
              "CANCELLED",
              "COMPLETED"
            ],
            "default": "REQUESTED"
          },
          "clinic": {
            "$ref": "#/components/schemas/Clinic"
          },
          "patient": {
            "$ref": "#/components/schemas/Patient"
          },
          "healthPractitioner": {
            "$ref": "#/components/schemas/HealthPractitioner"
          }
        }
      },
